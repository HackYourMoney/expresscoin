<!DOCTYPE html>
<html>
<head>
  <% include ./stylesheet/stylesheet %>
  <title>내 코인정보</title>
</head>
<body>
  <% include header %>
  <div class="container">
    <div class="card text-xs-center">
      <br>
      <div class="card-block">
        <h4 class="card-title">회원정보</h4>
        <p class="card-text">
          <button onclick="notifyMe()">알람</button>
        </p>
      </div>
    </div>
    <div class="details">
    <% if(coins.length>0) { %>
      <table class="list-table" id="cointable">
      <caption>코인 가즈아!!</caption>
        <thead>
          <th>거래소</th>
          <th>코인이름</th>
          <th>구매가격</th>
          <th>입금액</th>
          <th>현재가격</th>
          <th>현재총액</th>
          <th>차액</th>
          <th>수익률(%)</th>
          <th></th>
        </thead>
        <tbody>
          <% for(var i=0;i<coins.length;i++) { %>
          <tr>
            <td class="exchange"><%= coins[i].exchange %></td>
            <td class="coinname"><a href="/coinRead/<%= coins[i]._id%>"><%= coins[i].coinname %></a></td>
            <td class="purchase"><%= coins[i].purchase %></td>
            <td class="deposit"><%= coins[i].deposit %></td>
          </tr>
          <% } %>
        </tbody>
      </table>
    <% } else { %>
      <div>등록된 코인이 없습니다</div>
    <% } %>
    </div>
    <div class="result">
      <ul>
        <li>입금 총액 : <span id="totalInput"><%#= totalInput %></span></li>
        <li>현재 총액 : <span id="totalNow"><%#= totalNow %></span></li>
        <li>순수익 : <span id="getMoney"><%#= getMoney %></span></li>
        <li>수익율(%) : <span id="getMoneyRate"><%#= getMoneyRate %></span></li>
      </ul>
    </div>
    <a href="/coinRegister" class="button">코인등록</a>
  </div>
</body>
</html>

<script>
  function notifyMe() {
    // Let's check if the browser supports notifications
    if (!("Notification" in window)) {
      alert("This browser does not support desktop notification");
    }

    // Let's check whether notification permissions have already been granted
    else if (Notification.permission === "granted") {
      // If it's okay let's create a notification
      var msg={
          body: "aptpsl"
      }
      var notification = new Notification("예약 요청이 들어왔습니다", msg);
    }

    // Otherwise, we need to ask the user for permission
    else if (Notification.permission !== 'denied') {
      Notification.requestPermission(function (permission) {
        // If the user accepts, let's create a notification
        if (permission === "granted") {
          var notification = new Notification("Hi there!");
        }
      });
    }

    // At last, if the user has denied notifications, and you
    // want to be respectful there is no need to bother them any more.
  } Notification.requestPermission().then(function(result) {
    console.log(result,"hihi");
  });

  function spawnNotification(theBody,theIcon,theTitle) {
    var options = {
      body: theBody,
      icon: theIcon
    }
    console.log(theBody,theIcon,theTitle);
    var n = new Notification(theTitle,options);
  }

  // 숫자 자릿수 표시 함수
  function numberWithCommas(x) {
  return x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
  }

  // 입금 총액
  var totalInput = 0;
  for (var i=1;i<document.getElementById('cointable').rows.length;i++) {
    totalInput += parseInt(document.getElementsByClassName("deposit").innerHTML);
  }
  document.getElementById("totalInput").innerHTML = numberWithCommas(totalInput);

  // 현재 총액 : API 반영 예정
  var totalNow = 0;
  document.getElementById("totalNow").innerHTML = numberWithCommas(totalNow);

  // 순 수익
  var getMoney = totalNow - totalInput;
  document.getElementById("getMoney").innerHTML = numberWithCommas(getMoney);

  // 수익률
  var getMoneyRate = getMoney/100;
  document.getElementById("getMoneyRate").innerHTML = numberWithCommas(getMoneyRate);

  function total_value(params){
    sum = 0 ;
    for(i = 0 ; i <params.length;i++){
      console.log(numberWithoutCommas(params[i].innerHTML.slice(0,-1)));
      sum += parseInt(numberWithoutCommas(params[i].innerHTML.slice(0,-1)));
    }
    return sum;
  }
  function numberWithoutCommas(x){
    return parseInt(x.replace(/,/g,""));
  }
</script>
